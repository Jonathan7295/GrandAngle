{% extends ':layout:layout.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            Création d'un nouvel utilisateur
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    {{ form_start(form) }}

                        {# Erreurs générales du formulaire #}
                        {{ form_errors(form) }}

                    <div class="form-group">

                        {# Génération du label #}
                        {{ form_label(form.firstname, "Nom", {'label_attr': {'class': 'col-md-4 control-label ajust'}})}}
                        
                        {# Affichage des erreurs pour ce champs précis #}
                        {{ form_errors(form.firstname) }}

                        <div class="col-md-8">
                            {# Génération de l'input #}
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">

                        {# Génération du label #}
                        {{ form_label(form.lastname, "Prénom", {'label_attr': {'class': 'col-md-4 control-label ajust'}})}}
                        
                        {# Affichage des erreurs pour ce champs précis #}
                        {{ form_errors(form.lastname) }}
                       
                        <div class="col-md-8">
                            {# Génération de l'input #}
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">

                        {# Génération du label #}
                        {{ form_label(form.role, "Role", {'label_attr': {'class': 'col-md-4 control-label ajust'}})}}
                        
                        {# Affichage des erreurs pour ce champs précis #}
                        {{ form_errors(form.role) }}

                        <div class="col-md-8">
                            {# Génération du select #}
                            {{ form_widget(form.role, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">

                        {# Génération du label #}
                        {{ form_label(form.email, "Adresse e-mail", {'label_attr': {'class': 'col-md-4 control-label ajust'}})}}
                        
                        {# Affichage des erreurs pour ce champs précis #}
                        {{ form_errors(form.email) }}
                    
                        <div class="col-md-8">
                           {# Génération de l'input #}
                           {{ form_widget(form.email, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>    
                    <div class="form-group">

                        {# Génération du label #}
                        {{ form_label(form.username, "Identifiant", {'label_attr': {'class': 'col-md-4 control-label ajust'}})}}
                        
                        {# Affichage des erreurs pour ce champs précis #}
                        {{ form_errors(form.username) }}
                        
                        <div class="col-md-8">
                            {# Génération de l'input #}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">

                        {# Génération du label #}
                        {{ form_label(form.plainPassword.first, "Mot de passe", {'label_attr': {'class': 'col-md-4 control-label ajust'}})}}
                        
                        {# Affichage des erreurs pour ce champs précis #}
                        {{ form_errors(form.plainPassword.first) }}

                        <div class="col-md-8">
                            {# Génération de l'input #}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">

                        {# Génération du label #}
                        {{ form_label(form.plainPassword.second, "Vérification", {'label_attr': {'class': 'col-md-4 control-label ajust'}})}}
                        
                        {# Affichage des erreurs pour ce champs précis #}
                        {{ form_errors(form.plainPassword.second) }}

                        <div class="col-md-8">
                            {# Génération de l'input #}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-2">
                    <a id="newlien" type="button" title="Ajouter un numéro" class="glyphicon glyphicon-collapse-down">&nbsp;Ajouter</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label id="bloc" class="blocdebnew">Bloquer</label>
                <label id="debloc" class="blocdebnew">Debloquer</label> 
            </div>
            <div class="col-md-2">
                 {{ form_widget(form.locked, {'attr': {'class': 'editlocknew'}}) }}
            </div>
            <div class="col-md-5">
                <input id="newutilval" type="submit" value="Valider" />
                <a id="newutilret" href="{{ path('utilisateur_index') }}">Retour</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">

        // Gestion du checked
        $('.editlocknew').click(function(){
            if ($( "input:checked" ).val()==1) {
                $("#debloc").css('display','block');
                $("#bloc").css('display','none');
            }else{
                $("#debloc").css('display','none');
                $("#bloc").css('display','block');
            }
        });

        // Génération d'un nouveau groupe de champs tel
        $('#newlien').click(function(){
            alert("Louper !!");
        });
       
    </script>
{% endblock %}
