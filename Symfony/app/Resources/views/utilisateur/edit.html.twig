{% extends ':layout:layout.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            Modification d'un utilisateur
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    {{ form_start(edit_form) }}
                    <div class="form-group">
                        <label class="col-md-4 control-label ajust">Nom</label>
                        <div class="col-md-8">
                            {{ form_widget(edit_form.firstname, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label ajust">Prénom</label>
                        <div class="col-md-8">
                           {{ form_widget(edit_form.lastname, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label ajust">Role</label>
                        <div class="col-md-8">
                            {{ form_widget(edit_form.role, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label ajust">Adresse e-mail</label>
                        <div class="col-md-8">
                           {{ form_widget(edit_form.email, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>    
                    <div class="form-group">
                        <label class="col-md-4 control-label ajust">Identifiant de connexion</label>
                        <div class="col-md-8">
                            {{ form_widget(edit_form.username, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label ajust">Mot de passe</label>
                        <div class="col-md-8">
                           {{ form_widget(edit_form.plainPassword.first, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label ajust">Vérification</label>
                        <div class="col-md-8">
                           {{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control ajust'}}) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label id="bloc" class="blocdebnew">Bloquer</label>
                    <label id="debloc" class="blocdebnew">Debloquer</label> 
                </div>
                <div class="col-md-2">
                     {{ form_widget(edit_form.locked, {'attr': {'class': 'editlocknew'}}) }}
                </div>
                <div class="col-md-5">
                    <input id="newutilval" type="submit" value="Valider" />
                    <a id="newutilret" href="{{ path('utilisateur_index') }}">Retour</a>
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">

        // Gestion du checked
        $('.editlocknew').click(function(){
            if ($( "input:checked" ).val()==1) {
                $("#debloc").css('display','block');
                $("#bloc").css('display','none');
            }else{
                $("#debloc").css('display','none');
                $("#bloc").css('display','block');
            }
        });
       
    </script>
{% endblock %}