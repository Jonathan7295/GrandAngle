{# Layout de la page principale #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue!{% endblock %}</title>
        {# Css Css jquery-ui #}
        {% stylesheets 'css/ui-lightness/jquery-ui-1.7.2.custom.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {# Css Style perso #}
        {% stylesheets 'css/diffusion/stylesitediffusion.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {# Css menu #}
        {% stylesheets 'css/diffusion/style.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

        {# Script Jquery #}
        {% javascripts 'js/jquery/jquery.min.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {# Script Bootstrap #}
        {% javascripts 'js/bootstrap/bootstrap.min.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {# Script site #}
        {% javascripts 'js/diffusion/site.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div id="back"></div>
            <div class="container">
            <a href="#" class="menu_btn">
                <span class="icon">
                       <i aria-hidden="true" class="glyphicon glyphicon-th"></i>
                </span>
            </a>
             <div id="menu">
                <a href="#" class="close">
                    <span class="icon">
                        <i aria-hidden="true" class="glyphicon glyphicon-remove"></i>
                    </span>
                </a>
                <ul>
                    <li class="active"><a href="#">Accueil</a></li>
                    <li><a href="#">Articles</a></li>
                    <li><a href="#">Votes</a></li>
                    <li><a href="#">Blog</a></li>
                </ul>
            </div>
        </div>
            <div id="page">
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>