{% extends "::layout/layout.html.twig" %}
 {% block body %}
 	<style>
		img.img{height:151px;width:202px;margin-top:10px;margin-bottom:10px;border:1px black solid;}
		div.panel.pad{padding-left: 25px;padding-right: 25px; height: 52em;}
