{% extends ':layout:layout.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            Liste des oeuvres
        </div>
        <div class="container">
            {# Selection de l'exposition #}
            <div id="choiceexpo" class="row">
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-1">
                        <select id="choixExpo" class="form-control" name="expo">
                            <option value="choix">Choisissez une exposition</option>
                        {% for exposition in expositions %}
                            <option value="{{ exposition.id }}">{{ exposition.nomExposition }}</option>
                        {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <ul class="nav nav-pills">
                            <li>
                            <a id="newoeuv" title="Nouvelle oeuvre" href="{{ path('oeuvre_new') }}">Nouvelle</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            {# Affichage de la liste des oeuvres #}
            <div class="row">
                <div id="scrolloeuv" class="col-md-11">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Etat</th>
                                <th>Artiste</th>
                                <th>Type</th>
                                <th>Nombre de visite</th>
                                <th>Position</th>
                                <th>Actions</th>
                                <th>Imprimer</th>
                            </tr>
                        </thead>
                        {% if oeuvres is defined %}
                            <tbody id="list">
                            {% for oeuvre in oeuvres %}
                                <tr>
                                    <td>{{ oeuvre.nom }}</td>
                                    <td>{{ oeuvre.etat }}</td>
                                    <td>{{ oeuvre.artiste.nomComplet }}</td>
                                    <td>{{ oeuvre.typeoeuvre }}</td>
                                    <td>{{ oeuvre.nombreVisite }}</td>
                                    <td>Position</td>
                                    <td>
                                        <a id="searchindex" title="Voir détail" class="glyphicon glyphicon-search" href="{{ path('oeuvre_show', { 'id': oeuvre.id }) }}"></a>
                                        <a id="editindex" title="Modifier" class="glyphicon glyphicon-pencil" href="{{ path('oeuvre_edit', { 'id': oeuvre.id }) }}"></a>
                                        <a id="delindex" title="Supprimer" name="{{ path('oeuvre_delete', { 'id': oeuvre.id }) }}" class="glyphicon glyphicon-trash" href="{{ path('oeuvre_delete', { 'id': oeuvre.id }) }}"></a> 
                                    </td>
                                    <td><a id="qrcindex" title="Imprimer un Qrcode" href="{{ oeuvre.imgFlashCode ~ '.png'}}" class="glyphicon glyphicon-qrcode"></a> </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        {% else %}
                            <tbody id="list"></tbody>
                        {% endif %}
                        
                    </table>
                </div>
            </div>
            {# Emplacement des oeuvres dans la salle #}
            <div id="iconew" class="row">
                <div class="col-md-8">
                    {# {% image 'image/emplacement.png' %}
                        <img id="place" class="img-responsive" title="Emplacements" src="{{ asset_url }}"/>
                    {% endimage %} #}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
    
    $(document).ready(function(){

        scroll();

        function scroll(){

            // Gestion de l'ascenseur si il dépasse la hauteur du tableau
            if ($(".table").height() < $("#scrolloeuv").height()) {
                $("#scrolloeuv").css("overflow-y" , "hidden");
            }else{
                $("#scrolloeuv").css("overflow-y" , "scroll");
            }

        }

        // Choix d'une exposition
        $('#choixExpo').change(function(){
            var id = $(this).val();
            if (id != 'choix') {
                list = $('#list'); // récupérer l'élément liste du code HTML
                
                tr = document.createElement('tr'); 

               function ajaxCall(id){
                    $.ajax({
                        url: "{{ path('list_oeuvre') }}", // On renseigne l'url TWIG
                        method: "post",
                        data: {id: id} // On passe l'id dans la requête
                    }).done(function(msg){
                        refreshList(msg);
                    });
               }

               ajaxCall(id);
            }else{
                $.ajax({
                    url: "{{ path('oeuvre_index') }}", // On renseigne l'url TWIG
                    method: "post",
                }).done(function(msg){
                    refreshList(msg);
                });
                scroll();
            }
        });
        // Fonction pour afficher les données
        function refreshList(msg){
            // mettre à jour les données de la page
            list[0].innerHTML = ""; // Efface la liste

            // Pour chaque élément trouvé dans le document JSON, on peuple la liste
            $.each(JSON.parse(msg['data']), function(i, item) {


                // On créé une colonne pour chacun des champs
                li = document.createElement('td');
                li1 = document.createElement('td');
                li2 = document.createElement('td');
                li3 = document.createElement('td');
                li4 = document.createElement('td');
                li5 = document.createElement('td');
                li6 = document.createElement('td');
                li7 = document.createElement('td');

                // On récupère les données
                nom = document.createTextNode(item.nom);
                etat = document.createTextNode(item.etat);
                artiste = document.createTextNode(item.nomArt+' '+item.preNomArt);
                type = document.createTextNode(item.type);
                nbVisite = document.createTextNode(item.nombreVisite);
                position = document.createTextNode(item.position);

                // On créé les boutons
                var show = document.createElement('a');
                show.id = 'searchindex';
                show.href = '/oeuvre/'+item.id+'/show';
                show.title = 'Voir détail';
                show.setAttribute('class','glyphicon glyphicon-search');

                var edit = document.createElement('a');
                edit.id = 'editindex';
                edit.href = '/oeuvre/'+item.id+'/edit';
                edit.title = 'Modifier';
                edit.setAttribute('class','glyphicon glyphicon-pencil');

                var del  = document.createElement('a');
                del.id = 'delindex';
                del.href = '/oeuvre/'+item.id+'/delete';
                del.title = 'Supprimer';
                del.setAttribute('class','glyphicon glyphicon-trash');

                var code = document.createElement('a');
                code.id = 'qrcindex';
                code.href = item.img+'.png';
                code.title = 'Imprimer un Qrcode';
                code.setAttribute('class','glyphicon glyphicon-qrcode');

                // On insère les données dans chacune des colonnes
                li.appendChild(nom);
                li1.appendChild(etat);
                li2.appendChild(artiste);
                li3.appendChild(type);
                li4.appendChild(nbVisite);
                li5.appendChild(position);
                li6.appendChild(show);
                li6.appendChild(edit);
                li6.appendChild(del);
                li7.appendChild(code);

                //On insère dans la ligne les différentes colonnes
                tr.appendChild(li);
                tr.appendChild(li1);
                tr.appendChild(li2);
                tr.appendChild(li3);
                tr.appendChild(li4);
                tr.appendChild(li5);
                tr.appendChild(li6);
                tr.appendChild(li7);

                list[0].appendChild(tr);

                tr = document.createElement('tr');

            });
            scroll();             
       }
    });
  </script>  
{% endblock %}